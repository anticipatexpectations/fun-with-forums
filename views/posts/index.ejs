<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>fun with forums</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/libraries/jquery/jquery.min.js"></script>
      <!-- Materialize JS -->
    <script src="/libraries/materialize/js/materialize.min.js"></script>
        <!-- Application JS -->
    <script src="/js/app.js"></script>
  </head>
  <body>
    <main>
      <header>
        <h1 id="forumName">Whoa What A Forum</h1>
      </header>
        <section>
            <a id="newPostLink" href="/posts/new">ADD NEW POST</a>
            <% posts.forEach( (posts) => { %>
              <div class="post">
                <a href="/posts/<%= posts.id %>">
                  <img src="<%= posts.img_url %>" alt="a picture">
                  <h2>Subject: <%= posts.subject %></h2>
                </a>
                <p>Content: <%= posts.p_content %></p>
                <p>Likes: <%= posts.p_likes %>,  Comments: <%= posts.num_comments %></p>
                <p></p>
              </div>
            <% }) %>
        </section>
    </main>
  </body>
</html>
