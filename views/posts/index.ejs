<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>fun with forums</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <main>
      <header>
        <h1>WHOA WHAT A FORUM</h1>
      </header>
        <section>
            <a href="/posts/new">ADD NEW POST</a>
            <% posts.forEach( (posts) => { %>
              <div class="post">
                <a href="/posts/<%= posts.id %>">
                  <img src="<%= posts.img_url %>" alt="a picture">
                  <h2><%= posts.subject %></h2>
                </a>
                <p><%= posts.p_content %></p>
                <p>likes: <%= posts.p_likes %></p>
                <p>comments: <%= posts.num_comments %></p>
              </div>
            <% }) %>
        </section>
    </main>
  </body>
</html>
